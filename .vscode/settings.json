{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#1E88E5", // Blue active background
        "titleBar.activeForeground": "#FFFFFF", // White text color
        "titleBar.inactiveBackground": "#90CAF9", // Lighter blue inactive background
        "titleBar.inactiveForeground": "#FFFFFF" // White inactive text color
    },
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        // "--with-cetc-sim"
        // "--with-plc"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "black-formatter.importStrategy": "fromEnvironment",
    "pylint.args": [
        "--rcfile=.pylintrc"
    ],
    "flake8.args": [
        "--config=.flake8"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "coverage-gutters.manualCoverageFilePaths": [
        "build/reports/code-coverage.xml"
    ],
    "coverage-gutters.showLineCoverage": true,
    "autoDocstring.docstringFormat": "sphinx-notypes",
    "autoDocstring.startOnNewLine": true,
    "editor.rulers": [
        88
    ]
}